<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bulma-0.8.2/css/bulma.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="navbar-brand">
                <a class="navbar-item">
                    <img src="https://firebasestorage.googleapis.com/v0/b/dsa302-4b9ae.appspot.com/o/Logo.png?alt=media&token=7bd9988b-696f-44bd-96c1-ff3ac6560ecf">
                    <strong>Extrado</strong>
                </a>

                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-end">
                <div class="navbar-start is-center">
                    <a asp-page="/Index" class="navbar-item">
                        Shop
                    </a>

                    <a asp-page="/Cart" class="navbar-item">
                        Cart
                    </a>

                    <a class="navbar-item nav-link text-dark" asp-page="/Admin/Index">
                        Admin
                    </a>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
